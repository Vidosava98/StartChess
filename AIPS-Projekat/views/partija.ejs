                i
                { 
                  color: rgb(221, 43, 43) 
                  
                }
                #isMap
                {
                  height: 350px;
                  width: 100%;
                }
            </style>
        
          </head>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
      
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/dashboard">Startna stranica</a>
                </li>
              </ul>
              <form class="form-inline my-2 my-lg-0">
                <a href="/users/logout" class="btn btn-secondary">Odjavi se</a>
              </form>
            </div>
          </nav>
        <div>
            <div class="card" style="width:80%; background-color: rgb(222, 171, 171); margin: 5%; flex-direction: row;">
                <div style="margin: 2%;"><%=game.result%></div>
                <div style="margin: 2%;">Trenutan broj figura na tabli: <%=game.numbersOfFigure%></div>
                <div style="margin: 2%;">Vreme kada je partija zapoceta: <%=vreme%></div>
            </div>  
            <% igraci.forEach(function(igrac){ %> 
            <div class="card" style="width:20%; background-color: lightgray; margin:5%">
              <div class="card-body">
                <h5>Opis igraƒça</h5>
                <h5 class="card-title"><%= igrac.name%></h5>
                <p class="card-text"><%= igrac.email%></p>
                <div class="card-text">
                  Datum prijave: <%= igrac.date.getDate() %>.<%= igrac.date.getMonth()%>.<%= igrac.date.getFullYear()%>.
                </div>
                <div class="card-text">
                  Poslednja odigrana partija: <%= igrac.lastConnection.getDate() %>.<%= igrac.lastConnection.getMonth()%>.<%= igrac.lastConnection.getFullYear()%>.
                </div>
              </div>
            </div>
          <% }); %> 
        </div>
    </body>
</html>