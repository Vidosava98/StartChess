<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="../stilovi/style.css" />
    <!-- Ovo je deo za Bootstrap CSS -->
    <script
      src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"
      type="text/javascript"
    ></script>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Startna stranica</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <a href="/users/logout" class="btn btn-secondary">Odjavi se</a>
        </form>
      </div>
    </nav>
    <div class="glavniDivProfila">
      <div class="card" style="width:40%; background-color: lightgray;">
        <div class="card-body">
          <%- include('./partials/messages.ejs') %>
          <h5 class="card-title"><%=name%></h5>
          <p class="card-text"><%=email%></p>          
          <img style="width:40%;height:40%;" src ="data:image/jpeg;base64,<%=avatar%>">
          <div class="card-text">
            Datum prijave: <%= date.getDate() %>.<%= date.getMonth()%>.<%=date.getFullYear()%>.
          </div>
          <div class="card-text">
            Poslednja odigrana partija: <%= lastConnection.getDate() %>.<%= lastConnection.getMonth()%>.<%=lastConnection.getFullYear()%>.
          </div>
          <p></p>
          <a href="#" id="myRef1" class="card-link">Promeni Å¡ifru</a>
          <p></p>
          <a href="#" id="myRef2" class="card-link">Promeni ime</a>
          <p></p>
          <a href="#" id="myRef3" class="card-link">Promeni profilnu sliku</a>
          <p></p>
        </div>
      </div>
      <div id="row1" class="row1"></div>
    </div>

    <script>
      var $row1 = $("#row1");
      $("#myRef2").click(function () {
        $row1.load("/changes/_form_changeusername");
      });

      var $row1 = $("#row1");
      $("#myRef1").click(function () {
        $row1.load("/changes/_form_changepassword");
      });

      var $row1 = $("#row1");
      $("#myRef3").click(function(){
        $row1.load("/changes/_form_profileimage")
      });
    </script>
  </body>
</html>
